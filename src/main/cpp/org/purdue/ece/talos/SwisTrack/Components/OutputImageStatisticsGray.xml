<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Output Image Statistics (grayscale)</friendlyname>
	<description>Calculates statistics of a grayscale image.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/OutputImageStatisticsGray</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="checkbox">
			<name>CalculateNonZero</name>
			<label>Number of non-zero pixels</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>CalculateSum</name>
			<label>Sum</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>CalculateMeanStdDev</name>
			<label>Mean, std deviation</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>CalculateMinMax</name>
			<label>Min, max</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>

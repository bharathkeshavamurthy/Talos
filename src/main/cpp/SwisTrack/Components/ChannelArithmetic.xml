<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Channel Arithmetic</friendlyname>
    <description>Performs arbitrary arithmetic operations between channels.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/ChannelArithmetic</url>
	<displayimage>Output</displayimage>

	<configuration>
		<parameter type="double">
			<name>Coeff1</name>
			<label>Coefficient 1</label>
			<unit></unit>
			<default>0.3</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Channel1</name>
			<label>Channel 1</label>
			<items>
				<item key="0">None</item>
				<item key="3">Red</item>
				<item key="2">Green</item>
				<item key="1">Blue</item>
			</items>
			<default>3</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Op1</name>
			<label>Operator 1</label>
			<items>
				<item key="0">+</item>
				<item key="3">-</item>
				<item key="2">*</item>
				<item key="1">/</item>
			</items>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Coeff2</name>
			<label>Coefficient 2</label>
			<unit></unit>
			<default>0.59</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Channel2</name>
			<label>Channel 2</label>
			<items>
				<item key="0">None</item>
				<item key="3">Red</item>
				<item key="2">Green</item>
				<item key="1">Blue</item>
			</items>
			<default>2</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Op2</name>
			<label>Operator 2</label>
			<items>
				<item key="0">+</item>
				<item key="3">-</item>
				<item key="2">*</item>
				<item key="1">/</item>
			</items>
			<default>0</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="double">
			<name>Coeff3</name>
			<label>Coefficient 3</label>
			<unit></unit>
			<default>0.11</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="dropdownlist">
			<name>Channel3</name>
			<label>Channel 3</label>
			<items>
				<item key="0">None</item>
				<item key="3">Red</item>
				<item key="2">Green</item>
				<item key="1">Blue</item>
			</items>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>

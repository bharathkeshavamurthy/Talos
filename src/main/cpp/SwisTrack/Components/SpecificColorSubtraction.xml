<?xml version="1.0"?>
<swistrackcomponent>
	<friendlyname>Specific Color Subtraction</friendlyname>
	<description>Subtracts a specific value on each pixel of the color image.</description>
	<url>http://en.wikibooks.org/wiki/SwisTrack/Components/SpecificColorSubtraction</url>
	<displayimage>Output</displayimage>
	<configuration>
		<parameter type="integer">
			<name>BlueChannel</name>
			<label>Blue Channel</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>GreenChannel</name>
			<label>Green Channel</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="integer">
			<name>RedChannel</name>
			<label>Red Channel</label>
			<min>0</min>
			<max>255</max>
			<slider>true</slider>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>CorrectMean</name>
			<label>Correct Mean</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
		<parameter type="checkbox">
			<name>SpecifyColorBool</name>
			<label>Specify the color on an image</label>
			<default>1</default>
			<reloadable>true</reloadable>
		</parameter>
	</configuration>
</swistrackcomponent>

